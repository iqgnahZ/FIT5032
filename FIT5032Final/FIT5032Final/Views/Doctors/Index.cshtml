@model IEnumerable<FIT5032Final.Models.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (User.IsInRole("Doctor") || User.IsInRole("Administrator") || User.IsInRole("Patient"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DoctorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId })
                </td>
            </tr>
        }

    </table>
}
